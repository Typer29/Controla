{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AppSession",
  "type": "object",
  "required": [
    "user_id",
    "device_id",
    "app",
    "pid",
    "started_at",
    "ended_at",
    "active_seconds"
  ],
  "properties": {
    "id": {"type": "integer"},
    "user_id": {"type": "integer"},
    "device_id": {"type": "integer"},
    "app": {
      "type": "object",
      "required": ["name", "exe_path", "file_hash_sha256"],
      "properties": {
        "name": {"type": "string"},
        "exe_path": {"type": "string"},
        "file_hash_sha256": {"type": "string"},
        "publisher": {"type": "string"},
        "category": {"type": "string"}
      },
      "additionalProperties": false
    },
    "pid": {"type": "integer"},
    "started_at": {"type": "string", "format": "date-time"},
    "ended_at": {"type": "string", "format": "date-time"},
    "active_seconds": {"type": "integer"},
    "window_title_sample": {"type": "string"}
  },
  "additionalProperties": false
}
